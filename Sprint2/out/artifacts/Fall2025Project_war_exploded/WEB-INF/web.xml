<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
                             http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">

    <display-name>Fall2025Project</display-name>

    <!-- ========================================= -->
    <!-- Authentication Controller -->
    <!-- ========================================= -->
    <servlet>
        <servlet-name>AuthController</servlet-name>
        <servlet-class>controller.AuthController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AuthController</servlet-name>
        <url-pattern>/auth</url-pattern>
    </servlet-mapping>


    <!-- ========================================= -->
    <!-- Staff Management Controller -->
    <!-- ========================================= -->
    <servlet>
        <servlet-name>StaffController</servlet-name>
        <servlet-class>controller.StaffController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>StaffController</servlet-name>
        <url-pattern>/staff</url-pattern>
    </servlet-mapping>


    <!-- ========================================= -->
    <!-- Customer Controller -->
    <!-- ========================================= -->
    <servlet>
        <servlet-name>CustomerController</servlet-name>
        <servlet-class>controller.CustomerController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CustomerController</servlet-name>
        <url-pattern>/customer</url-pattern>
    </servlet-mapping>


    <!-- ========================================= -->
    <!-- Menu Management Controller -->
    <!-- ========================================= -->
    <servlet>
        <servlet-name>MenuController</servlet-name>
        <servlet-class>controller.MenuController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MenuController</servlet-name>
        <url-pattern>/menu</url-pattern>
    </servlet-mapping>


    <!-- ========================================= -->
    <!-- Order Controller -->
    <!-- ========================================= -->
    <servlet>
        <servlet-name>OrderController</servlet-name>
        <servlet-class>controller.OrderController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>OrderController</servlet-name>
        <url-pattern>/order</url-pattern>
    </servlet-mapping>


    <!-- ========================================= -->
    <!-- Remove Item From Cart Controllers -->
    <!-- ========================================= -->
    <servlet>
        <servlet-name>RemoveFromCartController</servlet-name>
        <servlet-class>controller.RemoveFromCartController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RemoveFromCartController</servlet-name>
        <url-pattern>/removeFromCart</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RemoveAllFromCartController</servlet-name>
        <servlet-class>controller.RemoveAllFromCartController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RemoveAllFromCartController</servlet-name>
        <url-pattern>/removeAllFromCart</url-pattern>
    </servlet-mapping>


    <!-- ========================================= -->
    <!-- Checkout Controller -->
    <!-- ========================================= -->
    <servlet>
        <servlet-name>CheckoutController</servlet-name>
        <servlet-class>controller.CheckoutController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CheckoutController</servlet-name>
        <url-pattern>/checkout</url-pattern>
    </servlet-mapping>


    <!-- ========================================= -->
    <!-- Reservation Management -->
    <!-- ========================================= -->

    <!-- Staff Reservation Controller -->
    <servlet>
        <servlet-name>ReservationController</servlet-name>
        <servlet-class>controller.ReservationController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ReservationController</servlet-name>
        <url-pattern>/reservation</url-pattern>
    </servlet-mapping>

    <!-- Customer Reservation Controller -->
    <servlet>
        <servlet-name>CustomerReservationController</servlet-name>
        <servlet-class>controller.CustomerReservationController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CustomerReservationController</servlet-name>
        <url-pattern>/customerReservation</url-pattern>
    </servlet-mapping>


    <!-- ========================================= -->
    <!-- Table Layout Viewer -->
    <!-- ========================================= -->
    <servlet>
        <servlet-name>TableLayoutController</servlet-name>
        <servlet-class>controller.TableLayoutController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TableLayoutController</servlet-name>
        <url-pattern>/tableLayout</url-pattern>
    </servlet-mapping>

    <!-- ========================================= -->
    <!-- Customer Administration Controller -->
    <!-- ========================================= -->
    <servlet>
        <servlet-name>CustomerAdminController</servlet-name>
        <servlet-class>controller.CustomerAdminController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>CustomerAdminController</servlet-name>
        <url-pattern>/customersAdmin</url-pattern>
    </servlet-mapping>

    <!-- ========================================= -->
    <!-- Table Management Controller -->
    <!-- ========================================= -->
    <servlet>
        <servlet-name>TableController</servlet-name>
        <servlet-class>controller.TableController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TableController</servlet-name>
        <url-pattern>/tables</url-pattern>
    </servlet-mapping>


    <!-- ========================================= -->
    <!-- H2 Database Web Console -->
    <!-- ========================================= -->
    <servlet>
        <servlet-name>H2Console</servlet-name>
        <servlet-class>org.h2.server.web.WebServlet</servlet-class>
        <init-param>
            <param-name>-webAllowOthers</param-name>
            <param-value>true</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>H2Console</servlet-name>
        <url-pattern>/h2/*</url-pattern>
    </servlet-mapping>


    <!-- ========================================= -->
    <!-- JSP Handler -->
    <!-- ========================================= -->
    <servlet>
        <servlet-name>jsp</servlet-name>
        <servlet-class>org.apache.jasper.servlet.JspServlet</servlet-class>
        <init-param>
            <param-name>fork</param-name>
            <param-value>false</param-value>
        </init-param>
        <load-on-startup>3</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>jsp</servlet-name>
        <url-pattern>*.jsp</url-pattern>
    </servlet-mapping>


    <!-- ========================================= -->
    <!-- Character Encoding Filter -->
    <!-- ========================================= -->
    <filter>
        <filter-name>EncodingFilter</filter-name>
        <filter-class>org.apache.catalina.filters.SetCharacterEncodingFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
        <init-param>
            <param-name>ignore</param-name>
            <param-value>false</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>EncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>


    <!-- ========================================= -->
    <!-- Welcome Pages -->
    <!-- ========================================= -->
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
        <welcome-file>login.jsp</welcome-file>
        <welcome-file>forgotStaffPassword.jsp</welcome-file>
    </welcome-file-list>

</web-app>

