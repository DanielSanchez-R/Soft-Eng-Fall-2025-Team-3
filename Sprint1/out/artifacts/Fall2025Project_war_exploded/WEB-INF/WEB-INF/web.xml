<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
         http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">

    <!-- Application Display Name -->
    <display-name>Pizza 505 ENMU Restaurant Management System</display-name>

    <!-- Welcome File List -->
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>

    <!-- Session Configuration (30 minute timeout) -->
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>

    <!-- ========================================= -->
    <!-- AUTHENTICATION & USER MANAGEMENT          -->
    <!-- ========================================= -->

    <!-- Authentication Controller -->
    <servlet>
        <servlet-name>AuthController</servlet-name>
        <servlet-class>controller.AuthController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AuthController</servlet-name>
        <url-pattern>/auth</url-pattern>
    </servlet-mapping>

    <!-- Customer Controller (Registration & Password Reset) -->
    <servlet>
        <servlet-name>CustomerController</servlet-name>
        <servlet-class>controller.CustomerController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CustomerController</servlet-name>
        <url-pattern>/customer</url-pattern>
    </servlet-mapping>

    <!-- Staff Management Controller -->
    <servlet>
        <servlet-name>StaffController</servlet-name>
        <servlet-class>controller.StaffController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>StaffController</servlet-name>
        <url-pattern>/staff</url-pattern>
    </servlet-mapping>

    <!-- ========================================= -->
    <!-- MENU MANAGEMENT                           -->
    <!-- ========================================= -->

    <!-- Menu Controller (Admin/Staff Menu Management) -->
    <servlet>
        <servlet-name>MenuController</servlet-name>
        <servlet-class>controller.MenuController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MenuController</servlet-name>
        <url-pattern>/menu</url-pattern>
    </servlet-mapping>

    <!-- ========================================= -->
    <!-- ORDER MANAGEMENT                          -->
    <!-- ========================================= -->

    <!-- Order Controller (Add to Cart) -->
    <servlet>
        <servlet-name>OrderController</servlet-name>
        <servlet-class>controller.OrderController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>OrderController</servlet-name>
        <url-pattern>/order</url-pattern>
    </servlet-mapping>

    <!-- Remove Single Item from Cart -->
    <servlet>
        <servlet-name>RemoveFromCartController</servlet-name>
        <servlet-class>controller.RemoveFromCartController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RemoveFromCartController</servlet-name>
        <url-pattern>/removeFromCart</url-pattern>
    </servlet-mapping>

    <!-- Remove All Instances of Item from Cart -->
    <servlet>
        <servlet-name>RemoveAllFromCartController</servlet-name>
        <servlet-class>controller.RemoveAllFromCartController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RemoveAllFromCartController</servlet-name>
        <url-pattern>/removeAllFromCart</url-pattern>
    </servlet-mapping>

    <!-- Checkout Controller -->
    <servlet>
        <servlet-name>CheckoutController</servlet-name>
        <servlet-class>controller.CheckoutController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CheckoutController</servlet-name>
        <url-pattern>/checkout</url-pattern>
    </servlet-mapping>

    <!-- ========================================= -->
    <!-- RESERVATION MANAGEMENT (NEW)              -->
    <!-- ========================================= -->

    <!-- Staff Reservation Controller -->
    <servlet>
        <servlet-name>ReservationController</servlet-name>
        <servlet-class>controller.ReservationController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ReservationController</servlet-name>
        <url-pattern>/reservation</url-pattern>
    </servlet-mapping>

    <!-- Customer Reservation Controller (NEW) -->
    <servlet>
        <servlet-name>CustomerReservationController</servlet-name>
        <servlet-class>controller.CustomerReservationController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CustomerReservationController</servlet-name>
        <url-pattern>/customerReservation</url-pattern>
    </servlet-mapping>

    <!-- Table Layout Viewer (NEW) -->
    <servlet>
        <servlet-name>TableLayoutController</servlet-name>
        <servlet-class>controller.TableLayoutController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TableLayoutController</servlet-name>
        <url-pattern>/tableLayout</url-pattern>
    </servlet-mapping>

    <!-- ========================================= -->
    <!-- TABLE MANAGEMENT                          -->
    <!-- ========================================= -->

    <!-- Table Management Controller (Admin) -->
    <servlet>
        <servlet-name>TableController</servlet-name>
        <servlet-class>controller.TableController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TableController</servlet-name>
        <url-pattern>/tables</url-pattern>
    </servlet-mapping>


    <!-- ========================================= -->
    <!-- MIME TYPE MAPPINGS                        -->
    <!-- ========================================= -->

    <mime-mapping>
        <extension>css</extension>
        <mime-type>text/css</mime-type>
    </mime-mapping>

    <mime-mapping>
        <extension>js</extension>
        <mime-type>application/javascript</mime-type>
    </mime-mapping>

    <mime-mapping>
        <extension>json</extension>
        <mime-type>application/json</mime-type>
    </mime-mapping>

    <mime-mapping>
        <extension>woff</extension>
        <mime-type>application/font-woff</mime-type>
    </mime-mapping>

    <mime-mapping>
        <extension>woff2</extension>
        <mime-type>application/font-woff2</mime-type>
    </mime-mapping>

</web-app>